    /* Direction */
    --direction: {{ direction }};
    /* Font variables */
    --font-stack-headings: "PP Acma";
    --font-weight-headings: 600;
    --font-style-headings: normal;
    --font-stack-body: {{ body_font.family }}, {{ body_font.fallback_families }};
