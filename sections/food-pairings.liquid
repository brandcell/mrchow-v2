{% comment %} {% assign food_pairing_metafields = product.metafields.custom %} {% endcomment %}

<div class="py-20 flex flex-col px-20 max-w-[1360px] m-auto justify-center">
  <h3 class="font-semibold self-center ">{{ section.settings.food_section_title }}</h3>
  <div class="flex flex-row justify-evenly flex-wrap">
    {% if section.blocks %}
      {% comment %} {% assign features = block.settings.food_array | split: ',' %} {% endcomment %}

      <div class="food-card flex flex-col max-w-[280px] items-center">
        {% for metafield in product.metafields.custom.food_pairings_name.value %}
          <div class="food-pairing-item flex flex-col">
            <p>{{ metafield.food_pairings_name.value }}</p>
          </div>
        {% endfor %}
        {% comment %}
        {% endcomment %}

        {% comment %}
          <p class="text-[26px]">{{ block.settings.food_category }}</p>

          <p class="text-[16px] text-[#1D1D1D62]">{{ block.settings.explanation }}</p>
        {% endcomment %}
      </div>

    {% else %}
      <p>There are no food pairings at this moment.</p>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Food Pairings",
  "settings": [
    {
      "type": "text",
      "id": "food_section_title",
      "label": "Food Section Title",
      "default": "Food Pairings"
    }
  ],
  "blocks": [
    {
      "type": "food_pairing",
      "name": "Food Pairing",
      "settings": [
        {
          "type": "text",
          "id": "food_array",
          "label": "Title"
        }
      ]
    }
  ]
}
{% endschema %}
